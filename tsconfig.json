{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["es2019"],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "outDir": ".",
    "rootDir": "src"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
